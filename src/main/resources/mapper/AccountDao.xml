<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.back_students_choose_lodge.dao.AccountDao">

    <resultMap type="com.back_students_choose_lodge.entity.Account" id="AccountMap">
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="user" column="user" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="level" column="level" jdbcType="INTEGER"/>
    </resultMap>
    <!--新增所有列==>注册-->
    <insert id="insert" keyProperty="uid" useGeneratedKeys="true">
        insert into account(user, password)
        values (#{user}, #{password})
    </insert>
    <!--登录-->
    <select id="login" resultMap="AccountMap">
        select uid,
               user,
               password,
               level
        from account
        where user = #{user}
          and password = #{password}
    </select>
    <!--通过主键删除-->
    <delete id="deleteById">
        delete from account where uid = #{uid}
    </delete>
    <!--通过主查询用户单条信息-->
    <select id="getUserById" resultMap="AccountMap">
        select uid,
               user,
               password,
               level
        from account
        where uid = #{uid}
    </select>
    <!--通过主键修改数据-->
    <update id="update">
        update account
        <set>
            <if test="user != null and user != ''">
                user = #{user},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
        </set>
        where uid = #{uid} and level = 0
    </update>

    <!--获取最新一条的数据s-->
    <select id="getNewUser" resultMap="AccountMap">
        SELECT uid FROM account WHERE uid = (SELECT MAX(uid) FROM account);
    </select>
</mapper>

